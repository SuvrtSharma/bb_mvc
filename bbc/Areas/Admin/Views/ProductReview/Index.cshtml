@model IEnumerable<bb.Models.Product>

@{
    ViewData["Title"] = "Pending Product Submissions";
}

<h2>Pending Product Submissions</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Submitted By</th>
            <th>Submitted On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.SubmittedBy</td>
                <td>@item.SubmittedOn?.ToString("g")</td>
                <td>
                    <a class="btn btn-info" asp-area="Admin" asp-controller="ProductReview" asp-action="Details" asp-route-id="@item.Id">Review</a>
                </td>
            </tr>
        }
    </tbody>
</table>
