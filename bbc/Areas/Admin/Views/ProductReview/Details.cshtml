@model bb.Models.Product

@{
    ViewData["Title"] = "Review Submission";
}

<h2>Review Submission</h2>

<div class="row">
    <div class="col-md-6">
        <h4>@Model.Title</h4>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>ISBN:</strong> @Model.ISBN</p>
        <p><strong>List Price:</strong> @Model.ListPrice</p>
        <p><strong>Price (1-50):</strong> @Model.Price</p>
        <p><strong>Price (50+):</strong> @Model.Price50</p>
        <p><strong>Price (100+):</strong> @Model.Price100</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Submitted By:</strong> @Model.SubmittedBy</p>
        <p><strong>Submitted On:</strong> @Model.SubmittedOn?.ToString("g")</p>
    </div>
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/@Model.ImageUrl" alt="Product Image" class="img-fluid" />
        }
    </div>
</div>

<form asp-action="Approve" method="post" style="display:inline-block">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Approve</button>
</form>
<form asp-action="Reject" method="post" style="display:inline-block">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Reject</button>
</form>
