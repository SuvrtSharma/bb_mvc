@model IEnumerable<bb.Models.Cart>

<h2>Your Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Title</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
                <td>
                    <a asp-action="Remove" asp-route-productId="@item.ProductId" class="btn btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
