@{
    ViewData["Title"] = "Payment Canceled";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #ffffff;
            color: #000000;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 80px auto;
            text-align: center;
        }

        .alert {
            padding: 40px;
            border: 2px solid #000000;
            background-color: #000000;
            color: #ffffff;
            border-radius: 8px;
        }

            .alert h1 {
                margin-top: 0;
                font-size: 2rem;
            }

            .alert p {
                font-size: 1.2rem;
            }

        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 24px;
            font-size: 1rem;
            color: #000000;
            background: #ffffff;
            border: 2px solid #000000;
            text-decoration: none;
            border-radius: 4px;
            transition: background 0.3s, color 0.3s;
        }

            .btn:hover {
                background: #000000;
                color: #ffffff;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="alert">
            <h1>Payment Canceled</h1>
            <p>Your payment has been canceled. Please try again or contact support if you need assistance.</p>
            <a href="@Url.Action("Index", "Home", new { area = "Customer" })" class="btn">Return to Home</a>
        </div>
    </div>
</body>
</html>
